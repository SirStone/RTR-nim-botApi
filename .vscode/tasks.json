{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "bash",
    // "args": [
    //     "-c"
    // ],
    "options": {
        "cwd": "RTR_nim_botApi"
    },
    "tasks": [
        {
            "label": "build Producer/Consumer model",
            "type": "shell",
            "command": "nim",
            "args": [
                "c","--showAllMismatches:on","--threads:on","--gc:orc","--out:out/ProdCons_model","src/ProdCons_model.nim"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build Walls",
            "type": "shell",
            "command": "bash",
            "args": [
                "src/buildScripts/build_Walls.sh"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build TestBot",
            "type": "shell",
            "command": "bash",
            "args": [
                "src/buildScripts/build_TestBot.sh"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "start tests",
            "type": "shell",
            "command": "bash",
            "args": [
                "tests/buildAndTest.sh"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build docs",
            "type": "shell",
            "command": "nim",
            "options":{
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "doc","--project","--index:on","--outdir:htmldocs","--git.url:https://github.com/SirStone/RTR-nim-botApi","--git.commit:master","--git.devel:master", "--outdir:htmldocs", "RTR_nim_botApi/src/RTR_nim_botApi.nim"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}